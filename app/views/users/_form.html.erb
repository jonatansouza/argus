<style>
.help-inline{
	display: none;
}
</style>
<%= form_for(@user, :url => user_path(@user)) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
	<%= f.text_field :name %>
    </div>
  </div>		
  <div class="clearfix">
    <%= f.label :email %>
    <div class="input">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password %>
    <div class="input">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :password_confirmation %>
    <div class="input">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="actions">
    <% if @user.id == false %>  
    <%= f.submit "Sign up and log in", :class => "btn btn-primary" %>
    <% else %>
      <%= f.submit "Update", :class => "btn btn-primary" %>
    <% end %>  
  </div>
<% end %>
